ScreenManager:
    MenuScreen:
    ProfileScreen:
<MenuScreen>
    MDCard:
        size_hint:None,None
        size:300,400
        pos_hint:{"center_x": 0.5,"center_y":0.5}
        elevation:10
        padding:25
        spacing:25
        orientation:'vertical'
        MDLabel:
            id:welcome_label
            text:"Welcome"

            font_size:40
            halign:'center'
            size_hint_y:None
            height:self.texture_size[1]
            padding_y:15

        MDTextField:
            id:user
            hint_text:"username"
            helper_text:"Username Gabole Kosong"
            helper_text_mode:"on_focus"
            icon_right:"account"
            size_hint_x:None
            width:200
            font_size:18
            pos_hint:{"center_x":0.5}
        MDTextField:
            id:password
            hint_text:"Password"
            icon_right:"eye-off"
            helper_text:"Password Gabole Kosong"
            helper_text_mode:"on_focus"
            size_hint_x:None
            width:200
            font_size:18
            pos_hint:{"center_x":0.5}
            password:True
        MDRoundFlatButton:
            text:"Login"
            font_size:12
            pos_hint:{"center_x":0.5}
            on_press: app.logger()
        MDRoundFlatButton:
            text:"Daftar"
            font_size:12
            pos_hint:{"center_x":0.5}
            on_press: app.clear()


        Widget:
            size_hint_y:None
            height:10
